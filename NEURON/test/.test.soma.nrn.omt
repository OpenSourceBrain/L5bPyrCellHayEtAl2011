# Script for running automated tests on OSB, see https://github.com/OpenSourceBrain/osb-model-validation

target: Test_Soma.hoc
engine: NEURON
mep: .test.soma.mep
experiments:
  step:
    observables:
      spike times:
        file:
          path: SomaOnly.si.dat
          columns: [0,1]
          scaling: [1000,1000]
        spike detection:
          method: threshold
        tolerance: 0
